# Supabase Configuration
# Get your Supabase URL and anon key from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# WalletConnect Configuration
# Get your project ID from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Arc Testnet Configuration
NEXT_PUBLIC_ARC_TESTNET_RPC_URL=https://rpc.testnet.arc.network
NEXT_PUBLIC_ARC_TESTNET_CHAIN_ID=5042002

# Contract Addresses on Arc Testnet
# Source: https://docs.arc.network/arc/references/contract-addresses
NEXT_PUBLIC_USDC_CONTRACT_ADDRESS=0x3600000000000000000000000000000000000000
NEXT_PUBLIC_EURC_CONTRACT_ADDRESS=0x89B50855Aa3bE2F677cD6303Cec089B5F319D72a

# Invopay Smart Contract Addresses (required for on-chain features)
# Deploy the contracts first, then add the addresses here
# Run: npm run deploy (from contracts directory)
NEXT_PUBLIC_INVOPAY_CONTRACT_ADDRESS=
NEXT_PUBLIC_INVOPAY_FEES_CONTRACT_ADDRESS=

# Smart Contract Deployment (OPTIONAL - Only needed if deploying the contract)
# ⚠️ SECURITY WARNING: Never commit this to version control!
# Use a SEPARATE wallet for deployment (not your main wallet)
# Format: private key WITH the 0x prefix
# DEPLOYER_PRIVATE_KEY=0xyour_deployer_wallet_private_key

# Arc Testnet RPC URL for Hardhat (used by deployment scripts)
# Optional: defaults to https://rpc.testnet.arc.network
ARC_TESTNET_RPC_URL=https://rpc.testnet.arc.network

# ArcScan API Key (OPTIONAL - Only needed for contract verification)
# Get your API key from: https://testnet.arcscan.app/myapikey
# ARCSCAN_API_KEY=your_arcscan_api_key

{
  "name": "invopay",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup:env": "bash scripts/setup-env.sh",
    "dev": "cd frontend && next dev",
    "build": "cd frontend && next build",
    "start": "cd frontend && next start",
    "lint": "cd frontend && next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "compile": "cd contracts && hardhat compile",
    "deploy": "cd contracts && hardhat run scripts/deploy.ts --network arcTestnet",
    "verify": "cd contracts && hardhat verify --network arcTestnet",
    "verify:contract": "cd contracts && hardhat run scripts/verify.ts --network arcTestnet",
    "initialize:tokens": "cd contracts && hardhat run scripts/initialize-tokens.ts --network arcTestnet"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@rainbow-me/rainbowkit": "^2.2.1",
    "@supabase/supabase-js": "^2.45.4",
    "@tanstack/react-query": "^5.62.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.454.0",
    "next": "16.0.7",
    "next-themes": "^0.4.4",
    "qrcode.react": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "tailwind-merge": "^2.5.4",
    "viem": "^2.21.45",
    "wagmi": "^2.12.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "eslint": "^9.17.0",
    "eslint-config-next": "16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "hardhat": "^2.22.0",
    "postcss": "^8.4.49",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3"
  }
}

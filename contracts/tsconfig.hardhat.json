{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "types": ["node", "hardhat"]
  },
  "include": ["hardhat.config.ts", "scripts/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
